{{!
    @template mod_threesixty/list_360_items

    Moodle template to the template library

    The purpose of this template is build the entire page for the template library (by including smaller templates).

    Classes required for JS:
    * mod_threesixty/edit_items

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * threesixtyid - Optional. The 360-degree feedback ID.
    * allitems - Array of all the 360-degree feedback items.

    Example context (json):
    {
        "threesixtyid" : 1,
        "allitems": [
            {
                "question" : "Is reliable.",
                "type" : "Rated",
                "deletebutton" : true,
                "moveupbutton" : false,
                "movedownbutton" : true
            },
            {
                "question" : "Has high technical skills.",
                "type" : "Rated",
                "deletebutton" : "Delete",
                "moveupbutton" : true,
                "movedownbutton" : true
            },
            {
                "question" : "What can you say about him?",
                "type" : "Comment",
                "deletebutton" : "Delete",
                "moveupbutton" : true,
                "movedownbutton" : false
            }
        ]
    }
}}
<div class="panel panel-default" data-region="itemlist">
    <button class="btn btn-default" id="btn-question-bank">{{#str}}labelpickfromquestionbank, mod_threesixty{{/str}}</button>
    <div class="panel-body">
        <table class="flexible generaltable generalbox">
            <thead>
            <tr>
                <th class="span4">Question</th>
                <th class="span4">Type</th>
                <th class="span4">Actions</th>
            </tr>
            </thead>
            <tbody>
            {{# allitems }}
                <tr class="user3 unselectedrow">
                    <td>
                        {{ question }}
                    </td>
                    <td>
                        <span class="label">{{ type }}</span>
                    </td>
                    <td>
                        {{#deletebutton}}
                            <button class="btn btn-link delete-item-button" id="delete-item-{{id}}" data-itemid="{{id}}" title="{{#str}}deletequestion, mod_threesixty{{/str}}">
                                {{#pix }} t/delete, core, {{#str}}deletequestion, mod_threesixty{{/str}} {{/pix }}
                            </button>
                        {{/deletebutton}}
                        {{#moveupbutton}}
                            <button class="btn btn-link move-item-up-button" id="move-item-up-{{id}}" data-itemid="{{id}}" title="{{#str}}moveitemup, mod_threesixty{{/str}}">
                                {{#pix }} t/up, core, {{#str}}moveitemup, mod_threesixty{{/str}} {{/pix }}
                            </button>
                        {{/moveupbutton}}
                        {{#movedownbutton}}
                            <button class="btn btn-link move-item-down-button" id="move-item-down-{{id}}" data-itemid="{{id}}" title="{{#str}}moveitemdown, mod_threesixty{{/str}}">
                                {{#pix }} t/down, core, {{#str}}moveitemdown, mod_threesixty{{/str}} {{/pix }}
                            </button>
                        {{/movedownbutton}}
                    </td>
                </tr>
            {{/ allitems }}
            </tbody>
        </table>
    </div>
</div>
{{#js}}
    require(['mod_threesixty/edit_items'], function(mod) {
        new mod({{threesixtyid}});
    });
{{/js}}
