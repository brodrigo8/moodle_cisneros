<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/threesixty/db" VERSION="20151210" COMMENT="XMLDB file for Moodle mod/threesixty"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
        >
  <TABLES>
    <TABLE NAME="threesixty" COMMENT="All 360-degree feedbacks">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="anonymous" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="email_notification" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="multiple_submit" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="autonumbering" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="site_after_submit" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="page_after_submit" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="page_after_submitformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="publish_stats" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timeopen" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timeclose" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="completionsubmit" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="If this field is set to 1, then the activity will be automatically marked as 'complete' once the user submits their choice."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Primary key for 360-degree feedback"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="threesixty_item" COMMENT="360-degree feedback items">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="threesixty" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="question" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="type" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="position" TYPE="int" LENGTH="3" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Primary key for feedback_item"/>
        <KEY NAME="threesixty" TYPE="foreign" FIELDS="threesixty" REFTABLE="threesixty" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="threesixty_status" COMMENT="Contains all the statuses for the 360 feedback.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="threesixty" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID from feedback table."/>
        <FIELD NAME="fromuser" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User ID of the one giving feedback. 0 if anonymous mode."/>
        <FIELD NAME="touser" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User ID of the user that is being given feedback on."/>
        <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="0 for unanswered, 1 for in progress, 2 for completed, 3 for declined"/>
        <FIELD NAME="remarks" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Reason why the user declined to give feedback."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="threesixty" TYPE="foreign" FIELDS="threesixty" REFTABLE="threesixty" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="threesixty_response" COMMENT="Contains all the responses for the 360 feedback items.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="threesixty" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID from feedback table."/>
        <FIELD NAME="item" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID from feedback_item table."/>
        <FIELD NAME="fromuser" TYPE="text" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Hashed user ID of the one giving feedback."/>
        <FIELD NAME="touser" TYPE="text" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Hashed user ID of the user that is being given feedback on."/>
        <FIELD NAME="salt" TYPE="text" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Salt used to encrypt to/from user fields."/>
        <FIELD NAME="value" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Value for the response given on the feedback item."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="threesixty" TYPE="foreign" FIELDS="threesixty" REFTABLE="threesixty" REFFIELDS="id"/>
        <KEY NAME="item" TYPE="foreign" FIELDS="item" REFTABLE="threesixty_item" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>