{{!
    @template mod_threesixty/questionnaire

    Moodle template to the template library

    The purpose of this template is build the entire page for the template library (by including smaller templates).

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * status
    * statusclass
    * scalelabels
    * ratedquestions
    * scales

    Example context (json):
    {
        "status": "In progress",
        "statusclass": "label-info",
        "ratedquestions": [
            { "questionid" : 1, "question": "Treats co-workers with courtesy and respect." },
            { "questionid" : 2, "question": "Has a positive attitude." },
            { "questionid" : 3, "question": "Has initiative needed without relying on co-workers unnecessarily." },
            { "questionid" : 4, "question": "Can capably lead projects effectively." },
            { "questionid" : 5, "question": "Possesses strong technical skills for their position." }
        ],
        "scales": [
            { "scale" : 1, "scalelabel": "1", "description": "Strongly disagree" },
            { "scale" : 2, "scalelabel": "2", "description": "Disagree" },
            { "scale" : 3, "scalelabel": "3", "description": "Somewhat disagree" },
            { "scale" : 4, "scalelabel": "4", "description": "Somewhat agree" },
            { "scale" : 5, "scalelabel": "5", "description": "Agree"},
            { "scale" : 6, "scalelabel": "6", "description": "Strongly agree" },
            { "scale" : 0, "scalelabel": "N/A", "description": "Not applicable" }
        ]
    }
}}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <h4>{{#str}}question{{/str}}</h4>
        </div>
        <div class="col-md-8">
            <h4>{{#str}}averagerating, mod_threesixty{{/str}}</h4>
        </div>
    </div>
    {{#ratings}}
    <div class="row">
        <div class="col-md-4">
            {{question}}
        </div>
        <div class="col-md-8">
            {{#averagerating}}
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="{{progresspercentage}}" aria-valuemin="0" aria-valuemax="100" style="width: {{progresspercentage}}%;">
                        {{averagerating}}
                    </div>
                </div>
            {{/averagerating}}
            {{^averagerating}}
                {{#str}}notapplicableabbr, mod_threesixty{{/str}}
            {{/averagerating}}
        </div>
    </div>
    {{/ratings}}
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
            <h4>{{#str}}comments, mod_threesixty{{/str}}</h4>
        </div>
    </div>
    {{#commentitems}}
    <div class="row">
        <div class="col-md-4">
            {{question}}
        </div>
        <div class="col-md-8">
            <ul>
                {{#comments}}
                    <li>
                        <blockquote class="blockquote">
                            <p>{{comment}}</p>
                            <footer class="blockquote-footer">{{fromuser}}</footer>
                        </blockquote>
                    </li>
                {{/comments}}
            </ul>
        </div>
    </div>
    {{/commentitems}}
</div>
