{{!
    @template core_course/completion_auto

    Template for displaying the manual completion button.

    Example context (json):
    {
        "cmid": 0,
        "overallcomplete": true,
        "overallincomplete": false
    }
}}
{{#istrackeduser}}
    {{#overallcomplete}}
        <button class="btn btn-icon icon-size-4 text-info" disabled {{!
        }}{{#accessibledescription}}{{!
            }}title="{{.}}" {{!
            }}aria-label="{{.}}" {{!
        }}{{/accessibledescription}}{{!
        }}{{^accessibledescription}}{{!
            }}title="{{#str}}completion_automatic:aria:activitydone, course, {{activityname}} {{/str}}" {{!
            }}aria-label="{{#str}}completion_automatic:aria:activitydone, course, {{activityname}} {{/str}}" {{!
        }}{{/accessibledescription}}>
            <i class="fa fa-check-circle-o" aria-hidden="true"></i>
        </button>
    {{/overallcomplete}}
    {{#overallincomplete}}
        <button class="btn btn-icon icon-size-4 text-info" disabled {{!
        }}{{#accessibledescription}}{{!
            }}title="{{.}}" {{!
            }}aria-label="{{.}}" {{!
        }}{{/accessibledescription}}{{!
        }}{{^accessibledescription}}{{!
            }}title="{{#str}}completion_automatic:aria:activitynotdone, course, {{activityname}} {{/str}}" {{!
            }}aria-label="{{#str}}completion_automatic:aria:activitynotdone, course, {{activityname}} {{/str}}" {{!
        }}{{/accessibledescription}}>
            <i class="fa fa-circle-o" aria-hidden="true"></i>
        </button>
    {{/overallincomplete}}
{{/istrackeduser}}
{{^istrackeduser}}
    <button class="btn btn-icon icon-size-4 text-info" disabled title="{{#str}}completion_automatic:aria:automatictracking, course, {{activityname}} {{/str}}">
        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
    </button>
{{/istrackeduser}}
