{{!
    @template tool_lp/rating_summary

    Moodle template for the suggested ratings of a user competency

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * suggestedrating - object The suggested rating object. Contains:
        * gradename - string The suggested rating.
        * proficiencyname - string The calculated proficiency from the suggested rating.
    * grade - object The final grade object. Contains:
        * gradename - string The suggested rating.
        * proficiencyname - string The calculated proficiency from the suggested rating.

}}
<table class="table">
    <thead>
    <tr>
        <th>
            &nbsp;
        </th>
        <th scope="col">
            {{#str}}rating, tool_lp{{/str}}
        </th>
        <th scope="col">
            {{#str}}proficient, tool_lp{{/str}}
        </th>
    </tr>
    </thead>
    <tbody>
    {{#suggestedrating}}
        <tr>
            <th scope="row">
                {{#str}}suggested, tool_lp{{/str}}
            </th>
            <td>
                {{gradename}}
            </td>
            <td>
                <span class="label{{#proficiency}} label-success{{/proficiency}}{{^proficiency}} label-important{{/proficiency}} pull-left">
                    {{proficiencyname}}
                </span>
            </td>
        </tr>
    {{/suggestedrating}}
    {{#grade}}
        <tr>
            <th scope="row">
                {{#str}}final, tool_lp{{/str}}
            </th>
            <td>
                {{gradename}}
            </td>
            <td>
                <span class="label{{#proficiency}} label-success{{/proficiency}}{{^proficiency}} label-important{{/proficiency}} pull-left">
                    {{proficiencyname}}
                </span>
            </td>
        </tr>
    {{/grade}}
    </tbody>
</table>

