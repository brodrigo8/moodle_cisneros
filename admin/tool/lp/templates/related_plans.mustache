{{!
    @template tool_lp/related_plans

    Moodle template for the list of user learning plans with a given competency.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * relatedplans - array Containing the related user learning plan objects.
        * id - int The plan ID.
        * name - string The plan name.
}}
<div data-region="relatedplans">
    <p>
        <strong>{{#str}}relateduserplans, tool_lp{{/str}}:</strong>
    </p>
    <p>
        <ul>
            {{#relatedplans}}
                <li>
                    <p>
                        <a href="#" data-action="plan-dialogue" data-id="{{id}}">
                            {{name}}
                        </a>
                    </p>
                </li>
            {{/relatedplans}}
        </ul>
    </p>
    {{^relatedplans}}
        <p>
            {{#str}}norelateduserplans, tool_lp{{/str}}
        </p>
    {{/relatedplans}}
</div>

{{#js}}
    require(['tool_lp/plandialogue'], function(PlanDialogue) {
        var plandialogue = new PlanDialogue();
        plandialogue.watch('[data-region="relatedplans"]');
    });
{{/js}}
