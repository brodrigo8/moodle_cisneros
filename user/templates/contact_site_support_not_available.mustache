{{!
    @template user/contact_site_support_not_available

    Fallback for the contact support page if smtp is not configured.

    Example context (json):
    {
        "supportemail": "<a href=\"mailto:supportemail@mail.com\">"
    }
}}
<div class="supportmessagecontainer rounded text-dark p-5">
    <div class="supportmessage m-y-5">
        <div class="supporticon border border-light">{{#pix}}t/life-ring, core{{/pix}}</div>
        <div class="p-3 supportmessagetitle">{{#str}}supportmessagenotsent, user{{/str}}</div>
        {{#supportemail}}
            <div class="supportmessagealt mt-1 rounded border border-dark p-3">
                {{#str}}supportmessagealternative, user, {{{supportemail}}}{{/str}}
            </div>
        {{/supportemail}}
    </div>
</div>
