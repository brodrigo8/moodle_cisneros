{{!
    @template mod_forum/discussion_settings_drawer

    This template will render the discussion settings drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}
{{<core/drawer}}
    {{$drawerName}}discussion-settings-drawer{{/drawerName}}
    {{$drawerUniqId}}{{uniqid}}{{/drawerUniqId}}
    {{$drawerClasses}}{{/drawerClasses}}
    {{$drawerRegion}}discussion-settings-drawer{{/drawerRegion}}
    {{$drawerHeaderContent}}
        {{> mod_forum/settings_header}}
    {{/drawerHeaderContent}}
    {{$drawerBodyContainer}}
        {{> mod_forum/discussion_settings_body_content}}
    {{/drawerBodyContainer}}
{{/core/drawer}}

{{#js}}
require(['jquery', 'mod_forum/settings_drawer'], function($, SettingsDrawer) {
    var root = $('#discussion-settings-drawer-{{uniqid}}');
    SettingsDrawer.init(root, '{{uniqid}}', false);
});
{{/js}}
