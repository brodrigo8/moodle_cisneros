{{!
    @template mod_threesixty/questionnaire

    Moodle template to the template library

    The purpose of this template is build the entire page for the template library (by including smaller templates).

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * status
    * statusclass
    * scalelabels
    * ratedquestions
    * scales

    Example context (json):
    {
        "status": "In progress",
        "statusclass": "label-info",
        "ratedquestions": [
            { "questionid" : 1, "question": "Treats co-workers with courtesy and respect." },
            { "questionid" : 2, "question": "Has a positive attitude." },
            { "questionid" : 3, "question": "Has initiative needed without relying on co-workers unnecessarily." },
            { "questionid" : 4, "question": "Can capably lead projects effectively." },
            { "questionid" : 5, "question": "Possesses strong technical skills for their position." }
        ],
        "scales": [
            { "scale" : 1, "scalelabel": "1", "description": "Strongly disagree" },
            { "scale" : 2, "scalelabel": "2", "description": "Disagree" },
            { "scale" : 3, "scalelabel": "3", "description": "Somewhat disagree" },
            { "scale" : 4, "scalelabel": "4", "description": "Somewhat agree" },
            { "scale" : 5, "scalelabel": "5", "description": "Agree"},
            { "scale" : 6, "scalelabel": "6", "description": "Strongly agree" },
            { "scale" : 0, "scalelabel": "N/A", "description": "Not applicable" }
        ]
    }
}}
<div class="card">
    <div class="card-block">
        <div class="pull-left">
            {{#userselect}}{{> core/url_select }}{{/userselect}}
        </div>
        <div class="pull-right m-t-1">
            {{#activitylink}}{{> core/action_link }}{{/activitylink}}
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h4>{{#str}}ratings, mod_threesixty{{/str}}</h4>
    </div>
    <div class="card-block">
        <ul class="list-group list-group-flush">
            {{#ratings}}
                <li class="list-group-item">
                    <p class="card-text">
                        <strong>{{question}}</strong>
                    </p>
                    {{#averagerating}}
                        <div class="row">
                            <div class="col-md-3" id="item-{{id}}">
                                <p class="text-right">
                                    {{#str}}averagerating, mod_threesixty, <strong>{{averagerating}}</strong>{{/str}}
                                </p>
                            </div>
                            <div class="col-md-9">
                                <progress class="progress" aria-describedby="item-{{id}}" value="{{progresspercentage}}" max="100"></progress>
                            </div>
                        </div>
                    {{/averagerating}}
                    {{^averagerating}}
                        <p class="font-italic">{{#str}}notapplicableabbr, mod_threesixty{{/str}}</p>
                    {{/averagerating}}
                </li>
            {{/ratings}}
        </ul>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h4>{{#str}}comments, mod_threesixty{{/str}}</h4>
    </div>
    <div class="card-block">
        {{#commentitems}}
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <p class="card-text">
                        <strong>{{question}}</strong>
                    </p>
                    {{#comments}}
                        <blockquote class="blockquote">
                            <p>{{comment}}</p>
                            <footer class="blockquote-footer"><cite title="{{fromuser}}">{{fromuser}}</cite></footer>
                        </blockquote>
                    {{/comments}}
                    {{^comments}}
                        <p class="font-italic">{{#str}}notapplicableabbr, mod_threesixty{{/str}}</p>
                    {{/comments}}
                </li>
            </ul>
        {{/commentitems}}
    </div>
</div>
